print("Welcome to ACME Bank")
access = int(input("PIN code"))
pin=1234
attempt=1

while attempt < 3 :
   if access != pin:
     access = int(input("Wrong PIN, try again!"))
     attempt = attempt + 1

   if access == pin:
     print("True PIN. You can access your account.")
     
   elif attempt >= 3:
     print("Your account locked because of more than 3 fail attempt!")
